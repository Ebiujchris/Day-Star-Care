    title Sitter Payments
  body
    h1 Sitter Payments
    table
      thead
        tr
          th Sitter Name
          th Assignments
          th Total Payment
      tbody
        each sitter in sitters
          tr
            td= sitter.name
            td
              ul
                each assignment in sitter.assignments
                  li= assignment.name
            td= sitter.totalPayment
