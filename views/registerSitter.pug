      const sitterNumber = document.getElementById('sitterNumber').value;
      const contacts = document.getElementById('contacts').value;
      
      // Validate sitter location
      if (!location.includes("Kabalagala")) {
          alert("Sitters must be from Kabalagala.");
          return false;
      }

      // Validate date of birth (should be over 18 years old)
      const dobDate = new Date(dob);
      const eighteenYearsAgo = new Date();
      eighteenYearsAgo.setFullYear(eighteenYearsAgo.getFullYear() - 18);
      if (dobDate > eighteenYearsAgo) {
          alert("Sitters must be over 18 years old.");
          return false;
      }

      // Validate NIN number (should be 14 characters)
      if (nin.length !== 14) {
          alert("NIN number must be 14 characters long.");
          return false;
      }

      // Validate contact number
      if (!contacts.match(/^\+?\d+$/)) {
          alert("Contact number must contain only digits and may start with +.");
          return false;
      }

      // If all validations pass, the form is valid
      return true;
    }
