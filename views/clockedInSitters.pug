html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title DayStar DayCare
    link(rel='stylesheet', href='/sitecss/sittertable.css')
    link(rel='icon', type='image/png', href='/public/images/photo3.jpg')

  body
    // Main Content
    main
      nav.navbar
        .container
          a.navbar-brand(href='/') Home
          ul.nav  
            li.nav-item
              a.nav-link(href='dashboard') Dashboard 
      table#sitterTable 
        thead 
          tr 
            th Name 
            th Gender 
            th Sitter Number
            th Status
            th ClockIn
            th Update
            th Pay
            th Delete
        tbody 
          if sitters.length 
            each sitter in sitters
              tr 
                td #{sitter.name}
                td #{sitter.gender}
                td #{sitter.sitterNumber}
                td #{sitter.status}
                
                td
                  a.btn.btn-secondary.btn-sm(href='/sitterClockout/'+sitter._id) Clock Out
                td
                  a.btn.btn-primary.btn-update(href="/sitterUpdate/"+sitter._id) Update 
                td 
                  a.btn.btn-primary.btn-update(href="/paySitter/"+sitter._id) Pay
                td
                  form(method='POST', action='/delete')
                    input(type='hidden', name='id', value=sitter._id)
                    button.btn.btn-danger.btn-block(type='submit') Delete
