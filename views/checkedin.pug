doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Document
    link(rel='stylesheet' href='/sitecss/babyTable.css')
    link(rel='icon' type='image/png' href='/images/logo.jpeg')
    link(href='/css/bootstrap/css/bootstrap.css' rel='stylesheet')
  body
     
    nav.navbar
      .container
          a.navbar-brand(href='/') Home
          ul.nav
            li.nav-item
              a.nav-link(href='') 
            li.nav-item
              a.nav-link(href='dashboard')  DashBoard 
            li.nav-item
              a.nav-link(href='#') 
            li.nav-item
              a.nav-link(href='dashboard') 

    table#babyTable
      thead
        tr
          th Name
          th Gender
          th Age
          th Parent1 Name 
          th Parent2 Name
          th Location
          th Baby Number
          th Status
          th Update 
          th Delete 
          
      tbody
        // Iterate over each baby and display their information
        each baby in babies
          tr
            td #{baby.fullName}
            td #{baby.gender}
            td #{baby.age}
            td #{baby.parent1Name}
            td #{baby.parent2Name}
            td #{baby.location}
            td #{baby.babyNumber}
            td #{baby.status}
            // Update button
            td
              a.btn.btn-primary.btn-update(href="/babiesUpdate/"+baby._id) Update
            // Delete button
            td
              form(method="POST" action="/delete")
                input(type="hidden" name="id" value=baby._id)
                button.btn.btn-danger(type='submit') Delete
            
    script(src='/js/babyregistration.js')
    script(src='/css/bootstrap/js/bootstrap.js')
