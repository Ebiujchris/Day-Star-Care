doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title DayStar DayCare
    link(rel='stylesheet', href='/sitecss/baby.css')
    link(rel='icon', type='image/png', href='/public/images/photo3.jpg')

  body
    main
      nav.navbar
        .container
          a.navbar-brand(href='/') Home
          ul.nav
            li.nav-item
              a.nav-link(href='/babieslist') Babies
            li.nav-item
              a.nav-link(href='dashboard')
            li.nav-item
              a.nav-link(href='#') 
            li.nav-item
              a.nav-link(href='#') 
      h1 
      form#babyForm(action="/babyClockOut?id="+baby._id method="POST")
        label(for='babyName') Full Name:
        input#name(type='text' name='fullName' value= baby.fullName readonly)
        br
        label(for='gender') Gender:
        select#gender(name='gender' value= baby.gender readonly)
          option(value='male') Male
          option(value='female') Female
        br
        label(for='age') Age:
        input#age(type='number' name='age' value=baby.age readonly)
        br
        label(for='babyNumber') Baby Number:
        input#babyNumber(type='text' name='babyNumber' value= baby.babyNumber readonly)
        br
        
        label(for='pickedBy') Picked By:
        input#pickedBy(type='text' name='pickedBy' value= baby.pickedBy)
        
        label(for='arrivalTime') Time of Arrival:
        input#departureTime(type='time' name='departureTime' value.baby.departureTime)
 
        input#status(type='hidden' name='status' value="ClockedOut")
        
        input(type='submit', value='Submit')
        br
