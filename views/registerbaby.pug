doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title DayStar DayCare
    link(rel='stylesheet', href='/sitecss/baby.css')
    link(rel='icon', type='image/png', href='/public/images/photo3.jpg')

  body
    main
      nav.navbar
        .container
          a.navbar-brand(href='/') Home
          ul.nav
            li.nav-item
              a.nav-link(href='/babieslist') Babies
            li.nav-item
              a.nav-link(href='dashboard') DashBoard 
            li.nav-item
              a.nav-link(href='#') 
            li.nav-item
              a.nav-link(href='#') 
      h1 
      form#babyForm(action="register" method="POST")
        label(for='fullName') Full Name:
        input#fullName(type='text' name='fullName')
        br
        label(for='gender') Gender:
        select#gender(name='gender')
          option(value='male') Male
          option(value='female') Female
        br
        label(for='age') Age:
        input#age(type='number' name='age')
        br
        label(for='parent1Name') Parent 1 Name:
        input#parent1Name(type='text' name='parent1Name')
        
        br
        label(for='location') Location:
        select#location(name='location')
          option(value='Kabalagala') Kabalagala
          option(value='Kansanga') Kansanga
          option(value='Muyenga') Muyenga
          option(value='Kibuli') Kibuli
          option(value='Nsambya') Nsambya
          option(value='Ggaba') Ggaba
          option(value='Bunga') Bunga
        br

        label(for='contacts') Contacts:
        input#contacts(type='text' name='contacts')
        br

        label(for='babyNumber') Baby Number:
        input#babyNumber(type='text' name='babyNumber')

        label(for='sitter') Choose Sitter:
        select#sitter(name='sitter')
          if sitters.length
            each sitter in sitters 
              option(value=sitter_id) #{sitter.name} 
        small#sitterErr
        
        label(for='time') Time to Spend:
        select#time(name='time')
          option(value='halfday') Half Day
          option(value='fullday') Full Day
      
        label(for='fee') Fee (UGX):
        select#fee(name='fee')
          option(value='10000') 10,000 UGX
          option(value='15000') 15,000 UGX

        label(for="dateOfPayment") Date of payment:
        input(type="date",  name="dateOfPayment")
      
        label(for='broughtBy') Brought By:
        input#broughtBy(type='text' name='broughtBy' value= baby.broughtBy)
        
        label(for='arrivalTime') Time of Arrival:
        input#arrivalTime(type='time' name='arrivalTime')
        select#arrivalPeriod(name='arrivalPeriod')
          option(value='AM') AM
          option(value='PM') PM
        
        input#status(type='hidden' name='status' value="ClockedIn")
        br
        input(type='submit' value='Register')
        br
