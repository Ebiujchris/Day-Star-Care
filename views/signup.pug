doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Registration Form
    link(rel='stylesheet', href='/sitecss/Signin.css')
  body
    nav.navbar
      .container
        a.navbar-brand(href='') 
        ul.nav
          li.nav-item
            a.nav-link(href='/') Home
          li.nav-item
            a.nav-link(href='#') About
          li.nav-item
            a.nav-link(href='#') Services
          li.nav-item
            a.nav-link(href='#') Contact
    h2 
    form(action='/signup', method='POST')
      div
        label(for='name') Name:
        input#name(type='text', name='name', required='')
      div
        label(for='nationalId') National ID:
        input#nationalId(type='text', name='nationalId', required='')
      div
        label(for='gender') Gender:
        select#gender(name='gender', required='')
          option(value='male') Male
          option(value='female') Female
      div
        label(for='address') Address:
        input#address(type='text', name='address', required='')
      div
        label(for='contact') Contact:
        input#contact(type='text', name='contact', required='')
      div
        label(for='nextOfKin') Next of Kin:
        input#nextOfKin(type='text', name='nextOfKin', required='')
      div
        label(for='email') Email:
        input#email(type='email', name='email', required='')
      div
        label(for='password') Password:
        input#password(type='password', name='password', required='')
      br
      button.btn(type='submit') Register
      br
      p
      |  have an account? 
      a(href='/login') Login
      p
      br
